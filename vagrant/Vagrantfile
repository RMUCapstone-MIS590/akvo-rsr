# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
  config.vm.box = "rsr-django-upgrade"
  config.vm.box_url = "http://files.support.akvo-ops.org/rsr-dev-django-upgrade-20140603.box"

  config.vm.synced_folder "../", "/vagrant/rsr/checkout/", id: "vagrant-root",
  :owner => "rsr",
  :group => "rsr"

  config.vm.network :private_network, ip: "192.168.50.101"

  config.vm.provision :shell, :path => "./provision_vagrant.sh"

end
